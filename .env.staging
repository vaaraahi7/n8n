# Staging Environment Configuration
# Copy this to .env for staging deployment

# n8n Configuration
N8N_USER=admin
N8N_PASSWORD=staging_password_123
N8N_BASIC_AUTH_ACTIVE=true

# Domain Configuration (STAGING)
DOMAIN=staging.yourstore.com
N8N_SUBDOMAIN=n8n
WEBHOOK_SUBDOMAIN=webhooks

# Full URLs (staging)
N8N_HOST=n8n.staging.yourstore.com
WEBHOOK_URL=https://n8n.staging.yourstore.com/
WEBHOOK_BASE_URL=https://webhooks.staging.yourstore.com/webhook

# n8n Settings
N8N_PORT=443
N8N_PROTOCOL=https
N8N_SECURE_COOKIE=true
N8N_JWT_AUTH_ACTIVE=true
EXECUTIONS_PROCESS=main
EXECUTIONS_MODE=regular
N8N_METRICS=true
GENERIC_TIMEZONE=UTC

# Database (Staging)
DB_TYPE=sqlite
DB_SQLITE_DATABASE=/data/staging-database.sqlite

# Email/SMTP Configuration (STAGING - Use Mailtrap)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_username
SMTP_PASS=your_mailtrap_password
SMTP_SENDER=staging@yourstore.com

# Social Media API Keys (STAGING/TEST)
FACEBOOK_APP_ID=your_staging_facebook_app_id
FACEBOOK_APP_SECRET=your_staging_facebook_app_secret
FACEBOOK_ACCESS_TOKEN=your_staging_facebook_access_token
FACEBOOK_PAGE_ID=your_staging_facebook_page_id

INSTAGRAM_ACCESS_TOKEN=your_staging_instagram_access_token
INSTAGRAM_ACCOUNT_ID=your_staging_instagram_account_id

YOUTUBE_API_KEY=your_staging_youtube_api_key
YOUTUBE_CLIENT_ID=your_staging_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_staging_youtube_client_secret

# Google APIs (STAGING)
GOOGLE_CLIENT_ID=your_staging_google_client_id
GOOGLE_CLIENT_SECRET=your_staging_google_client_secret
GOOGLE_SEARCH_CONSOLE_KEY=your_staging_search_console_key
GOOGLE_API_KEY=your_staging_google_api_key
GOOGLE_SEARCH_ENGINE_ID=your_staging_search_engine_id

# Ecommerce Platform Integration (STAGING)
SHOPIFY_SHOP_NAME=your-staging-shop-name
SHOPIFY_ACCESS_TOKEN=your_staging_shopify_access_token
WOOCOMMERCE_URL=https://staging.yourstore.com
WOOCOMMERCE_CONSUMER_KEY=your_staging_woocommerce_consumer_key
WOOCOMMERCE_CONSUMER_SECRET=your_staging_woocommerce_consumer_secret

# Payment Gateway (STAGING/TEST)
STRIPE_SECRET_KEY=sk_test_your_staging_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_staging_stripe_publishable_key
PAYPAL_CLIENT_ID=your_staging_paypal_client_id
PAYPAL_CLIENT_SECRET=your_staging_paypal_client_secret

# Blog & Content Management (STAGING)
WORDPRESS_URL=https://staging-blog.yourstore.com
WORDPRESS_USERNAME=your_staging_wp_username
WORDPRESS_PASSWORD=your_staging_wp_app_password
MEDIUM_ACCESS_TOKEN=your_staging_medium_access_token
MEDIUM_USER_ID=your_staging_medium_user_id

# Pinterest Integration (STAGING)
PINTEREST_ACCESS_TOKEN=your_staging_pinterest_access_token
PINTEREST_BOARD_ID=your_staging_pinterest_board_id

# SEO & Research Tools (STAGING)
SERPAPI_KEY=your_staging_serpapi_key

# Analytics (STAGING)
GOOGLE_ANALYTICS_TRACKING_ID=your_staging_ga_tracking_id

# Security (STAGING)
WEBHOOK_SECRET=staging_webhook_secret_key
JWT_SECRET=staging_jwt_secret_key
ENCRYPTION_KEY=staging_encryption_key

# Performance & Monitoring
NODE_ENV=staging
LOG_LEVEL=debug
ENABLE_METRICS=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=500

# External Services (STAGING)
REDIS_URL=redis://staging-redis:6379
SENTRY_DSN=your_staging_sentry_dsn

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 4 * * *
BACKUP_RETENTION_DAYS=7

# Feature Flags (STAGING - Enable all for testing)
BLOG_AUTOMATION_ENABLED=true
SOCIAL_MEDIA_ENABLED=true
SEO_ANALYTICS_ENABLED=true
ADVANCED_REPORTING_ENABLED=true
DEBUG_MODE=true
VERBOSE_LOGGING=true
