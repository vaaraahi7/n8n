# Local Development Environment Configuration
# Copy this to .env for local development

# n8n Configuration (LOCAL)
N8N_USER=admin
N8N_PASSWORD=local123
N8N_BASIC_AUTH_ACTIVE=true

# Domain Configuration (LOCAL)
DOMAIN=localhost
N8N_SUBDOMAIN=n8n
WEBHOOK_SUBDOMAIN=webhooks

# Full URLs (local with ngrok)
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/
# Update this with your ngrok URL when testing webhooks
WEBHOOK_BASE_URL=https://abc123.ngrok.io/webhook

# n8n Settings (LOCAL)
N8N_SECURE_COOKIE=false
N8N_JWT_AUTH_ACTIVE=false
EXECUTIONS_PROCESS=main
EXECUTIONS_MODE=regular
N8N_METRICS=true
GENERIC_TIMEZONE=UTC

# Database (LOCAL)
DB_TYPE=sqlite
DB_SQLITE_DATABASE=./data/local-database.sqlite

# Email/SMTP Configuration (LOCAL - Use Mailtrap for testing)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_username
SMTP_PASS=your_mailtrap_password
SMTP_SENDER=local@yourstore.com

# Alternative: Use Gmail for local testing
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-test-email@gmail.com
# SMTP_PASS=your-test-app-password
# SMTP_SENDER=your-test-email@gmail.com

# Social Media API Keys (TEST/DEVELOPMENT)
FACEBOOK_APP_ID=your_test_facebook_app_id
FACEBOOK_APP_SECRET=your_test_facebook_app_secret
FACEBOOK_ACCESS_TOKEN=your_test_facebook_access_token
FACEBOOK_PAGE_ID=your_test_facebook_page_id

INSTAGRAM_ACCESS_TOKEN=your_test_instagram_access_token
INSTAGRAM_ACCOUNT_ID=your_test_instagram_account_id

YOUTUBE_API_KEY=your_test_youtube_api_key
YOUTUBE_CLIENT_ID=your_test_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_test_youtube_client_secret

# Google APIs (TEST)
GOOGLE_CLIENT_ID=your_test_google_client_id
GOOGLE_CLIENT_SECRET=your_test_google_client_secret
GOOGLE_SEARCH_CONSOLE_KEY=your_test_search_console_key
GOOGLE_API_KEY=your_test_google_api_key
GOOGLE_SEARCH_ENGINE_ID=your_test_search_engine_id

# Ecommerce Platform Integration (LOCAL/TEST)
SHOPIFY_SHOP_NAME=your-test-shop-name
SHOPIFY_ACCESS_TOKEN=your_test_shopify_access_token
WOOCOMMERCE_URL=http://localhost:8080
WOOCOMMERCE_CONSUMER_KEY=your_test_woocommerce_consumer_key
WOOCOMMERCE_CONSUMER_SECRET=your_test_woocommerce_consumer_secret

# Payment Gateway (TEST KEYS ONLY)
STRIPE_SECRET_KEY=sk_test_your_test_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_test_stripe_publishable_key
PAYPAL_CLIENT_ID=your_test_paypal_client_id
PAYPAL_CLIENT_SECRET=your_test_paypal_client_secret

# Blog & Content Management (LOCAL)
WORDPRESS_URL=http://localhost:8081
WORDPRESS_USERNAME=your_local_wp_username
WORDPRESS_PASSWORD=your_local_wp_password
MEDIUM_ACCESS_TOKEN=your_test_medium_access_token
MEDIUM_USER_ID=your_test_medium_user_id

# Pinterest Integration (TEST)
PINTEREST_ACCESS_TOKEN=your_test_pinterest_access_token
PINTEREST_BOARD_ID=your_test_pinterest_board_id

# SEO & Research Tools (TEST)
SERPAPI_KEY=your_test_serpapi_key

# Analytics (TEST)
GOOGLE_ANALYTICS_TRACKING_ID=your_test_ga_tracking_id

# Security (LOCAL - Use simple keys for testing)
WEBHOOK_SECRET=local_webhook_secret
JWT_SECRET=local_jwt_secret
ENCRYPTION_KEY=local_encryption_key

# Performance & Monitoring (LOCAL)
NODE_ENV=development
LOG_LEVEL=debug
ENABLE_METRICS=true
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX=1000

# External Services (LOCAL)
REDIS_URL=redis://localhost:6379
# SENTRY_DSN=  # Leave empty for local development

# Backup Configuration (LOCAL)
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 6 * * *
BACKUP_RETENTION_DAYS=3

# Feature Flags (LOCAL - Enable all for testing)
BLOG_AUTOMATION_ENABLED=true
SOCIAL_MEDIA_ENABLED=true
SEO_ANALYTICS_ENABLED=true
ADVANCED_REPORTING_ENABLED=true
DEBUG_MODE=true
VERBOSE_LOGGING=true
MOCK_EXTERNAL_APIS=false

# Local Testing Options
USE_MOCK_DATA=true
SKIP_EMAIL_VERIFICATION=true
ALLOW_INSECURE_CONNECTIONS=true
DISABLE_RATE_LIMITING=true

# ngrok Configuration (for webhook testing)
# Update WEBHOOK_BASE_URL above with your ngrok URL
# Example: WEBHOOK_BASE_URL=https://abc123.ngrok.io/webhook
NGROK_ENABLED=true
NGROK_SUBDOMAIN=your-ngrok-subdomain
